<div class="w-75 mx-auto">
    <p class="fs-1">Mahsulot qo'shish</p>
    {{# if erroraddProduct}}
                   <div class="alert alert-warning alert-dismissible fade show" role="alert" style="background-color: #e0f7fa; color: #006064; border-color: #b2ebf2; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); animation: pulse 1.5s infinite;">
    <strong>Xatolik!</strong> Quyidagi maydonlarni tekshirib ko'rishingiz kerak.
    
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Yopish" style="color: #006064;"></button>
</div>

<style>
@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(0, 96, 100, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(0, 96, 100, 0); }
    100% { box-shadow: 0 0 0 0 rgba(0, 96, 100, 0); }
}
</style>

                    {{!-- <p>{{LoginError}}</p> --}}
                 {{/if}}
    <form action="/add-products" method="post">
        <div class="form-floating mb-3">       
            <input type="text" class="form-control shadow-sm" name="title" id="floatingInput" placeholder="Sarlavha">
            <label for="floatingInput">Sarlavha</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control shadow-sm" name="description" id="floatingTextarea" placeholder="Tavsif" rows="4"></textarea>
            <label for="floatingTextarea">Tavsif</label>
        </div>
        <div class="form-floating mb-3"> 
            <input type="file" class="form-control shadow-sm" name="image" id="floatingImage" placeholder="Rasm">
             <label for="floatingImage">Rasm</label>
              </div>
              <div class="form-floating mb-3">
                 <span class="input-group-text">$</span>
                 <div class="form-floating">
                    <input type="number" class="form-control shadow-sm" name="price" id="floatingPrice" placeholder="Narx">
                  <label for="floatingPrice">Narx ($)</label>
                 </div>
                   </div>
        <button type="submit" class="btn btn-primary w-100 shadow">Mahsulot qo'shish</button>
    </form>
</div>
