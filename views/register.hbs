<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Registratsiya</h3>
                    {{#if RegisterError}}
   <div class="alert alert-warning alert-dismissible fade show" role="alert" style="background-color: #e0f7fa; color: #006064; border-color: #b2ebf2; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); animation: pulse 1.5s infinite;">
    <strong>Xatolik!</strong> Quyidagi maydonlarni tekshirib ko'rishingiz kerak.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Yopish" style="color: #006064;"></button>
</div>

<style>
@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(0, 96, 100, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(0, 96, 100, 0); }
    100% { box-shadow: 0 0 0 0 rgba(0, 96, 100, 0); }
}
</style>




                      {{!-- <p>{{RegisterError}}</p> --}}
                    {{/if}}
                    <form action="/register" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control shadow-sm" name="firstname" id="floatingFirstname" placeholder="Ali">
                            <label for="floatingFirstname">First name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control shadow-sm" name="lastname" id="floatingLastname" placeholder="Valiyev">
                            <label for="floatingLastname">Last name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control shadow-sm" name="email" id="floatingEmail" placeholder="name@example.com">
                            <label for="floatingEmail">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control shadow-sm" name="password" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 shadow">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



